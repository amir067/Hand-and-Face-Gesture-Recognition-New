<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splashscreenmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.main.SplashActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FA3276"
            android:padding="5dp"
            android:src="@drawable/ic_icon_face_80" />
    </androidx.cardview.widget.CardView>



    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textView10"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font16"
        android:text="Hand and face \nGestures Recognition"
        android:textAlignment="center"
        android:textColor="#E91E63"
        android:textSize="16sp" />


</LinearLayout>